#!/bin/bash

for i in $(./gccv.py); do
	docker image build . -t applehq/crossdev:arm-$i   --build-arg version=$i
	docker image build . -t applehq/crossdev:avr-$i   --build-arg version=$i --build-arg tuple=avr
	docker image build . -t applehq/crossdev:arm64-$i --build-arg version=$i --build-arg tuple=aarch64-unknown-linux-gnu --build-arg arch=arm64
done

docker tag applehq/crossdev:arm-$i   applehq/crossdev:arm
docker tag applehq/crossdev:avr-$i   applehq/crossdev:avr
docker tag applehq/crossdev:arm64-$i applehq/crossdev:arm64

# GCC lower than 7.3 needs an older libc
for i in 6.5.0-r3; do
	docker image build . -t applehq/crossdev:arm-$i-oldlibc   --build-arg version=$i -f Dockerfile.oldlibc
	docker image build . -t applehq/crossdev:avr-$i-oldlibc   --build-arg version=$i --build-arg tuple=avr
	docker image build . -t applehq/crossdev:arm64-$i-oldlibc --build-arg version=$i --build-arg tuple=aarch64-unknown-linux-gnu --build-arg arch=arm64 -f Dockerfile.oldlibc
done

docker image list
